<% if flash[:alert] %>
	<%= js add_gritter(flash[:alert], title: "KJ's Portfolio", sticky: false) %>
<% elsif flash[:error] %>
	<%= js add_gritter(flash[:error], title: "KJ's Portfolio", sticky: false) %>
<% else flash[:notice] %>
	<%= js add_gritter(flash[:notice], title: "KJ's Portfolio", sticky: false) %>
<% end %>